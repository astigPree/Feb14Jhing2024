<ShowProposeScreen>:
	
	hand : hand
	info : info
	yes_button : yes_button
	no_button : no_button
	result : result
	exit_button : exit_button
	
	
	FloatLayout:
		
		
		Image:
			id : hand
			source : "Pictures/hand.png"
			size_hint : 0.64 , 0.2
			pos_hint : { "center_x" : 0.5 , "center_y" : 0.45 }
			keep_ratio : False
			allow_stretch : True
		
		Label:
			id : info
			size_hint : 0.6 , 0.1
			pos_hint : { "center_x" : 0.5 , "center_y" : 0.26 }
			font_name : "reg_font"
			font_size : min(self.size) * 0.3
			text : "will you stay with me?\nYes or No"
			color : "black"
			halign : "center"
		
		PruposeAnswerButton:
			id : yes_button
			source : "Pictures/answer.png"
			pos_hint : { "center_x" : 0.39 , "center_y" : 0.6 }
			size_hint : 0.2 , 0.1
			
			on_release:
				root.actionIfYes()
		
		PruposeAnswerButton:
			id : no_button
			source : "Pictures/answer no.png"
			pos_hint : { "center_x" : 0.7 , "center_y" : 0.6 }
			size_hint : 0.2 , 0.1
			
			on_release:
				root.moveIfNo()
		
		Image:
			id : result
			source : "Pictures/labyu jhing.png"
			pos_hint : { "center_x" : 0.5 , "center_y" : 0.65 }
			size_hint : 0.0 , 0.0
			keep_ratio : False
			allow_stretch : True
			opacity : 0
		
		CartonnyButton:
			id : exit_button
			size_hint : 0.2 , 0.1
			pos_hint : { "right" : 0.99 , "y" : 0.01 }
			disabled : not root.isDoneAllActivities
			opacity : 1 if root.isDoneAllActivities else 0
			
			on_release:
				root.command()

